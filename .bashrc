alias ehttp="if ifconfig tun0 &> /dev/null; then ip=\$(ifconfig tun0 | awk '/inet / { print \$2 }') && { echo -e \"\e[32mhttp://\$ip:8000/\e[0m\"; } | tee /dev/tty | sed 's/\x1B\[[0-9;]*[JKmsu]//g' | tr -d '[:space:]' | xclip -selection c; { tput setaf 4; python3 -m http.server 2>&1 >&3 | sed 's/.*/\e[34m&\e[0m/' >&2; } 3>&1; else { tput setaf 3; echo \"★ Device 'tun0' does not exist.\" >&2; tput setaf 5; echo \"➜ Please verify openvpn is running or re-execute the command.\" >&2; tput sgr0; }; fi"
